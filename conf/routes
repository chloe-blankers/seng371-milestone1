# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WhaleController.index

# Whales
GET     /Whales                    controllers.WhaleController.listWhales(request: Request)
POST    /Whales                    controllers.WhaleController.createWhale(request: Request)
POST    /Whales/filter             controllers.WhaleController.filterWhales(request: Request)
GET     /Whales/getWhales          controllers.WhaleController.getWhales(request: Request)
POST    /Whales/filter             controllers.WhaleController.filterWhales(request: Request)
GET     /Whales/filter             controllers.WhaleController.listFilterWhales(request: Request)

# Stats
GET     /Stats                      controllers.WhaleController.stats

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
